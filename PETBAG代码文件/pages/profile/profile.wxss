.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #c8d632;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: bold;
}

.picker-group {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.picker {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.checkbox-group {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.checkbox {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.checkbox checkbox {
  margin-right: 10rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background-color: #f8f8f8;
}

.textarea {
  width: 100%;
  height: 160rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.button-group {
  display: flex;
  justify-content: center;
  padding: 20rpx;
}

.save-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: #c8d632;
  color: #fff;
  border: none;
}

.save-btn:active {
  opacity: 0.8;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
}

.avatar-container {
  width: 672rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  border: 2rpx solid #c8d632;
}

.logout-text {
  position: absolute;
  right: 20rpx;
  top: 35rpx;
  font-size: 24rpx;
  color: #999;
  padding: 4rpx 12rpx;
  border: 1px solid #999;
  border-radius: 16rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  background: #fff;
  margin-bottom: 20rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.login-btn, .logout-btn {
  padding: 10rpx 40rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  border: none;
}

.login-btn {
  background: #c8d632;
  color: #fff;
}

.logout-btn {
  background: #ff4d4f;
  color: #fff;
} 