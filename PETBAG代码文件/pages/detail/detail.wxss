.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.picker-group {
  margin-top: 10rpx;
}

.picker {
  background-color: #f8f8f8;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.button-group {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.save-btn {
  background-color: #c8d632;
  color: white;
  border-radius: 8rpx;
  font-size: 32rpx;
  border: none;
} 